<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- actionBar-->
        <item name="actionBarStyle">@style/MyApp.MyActionBar</item>
        <!-- dropdown Menu-->
        <item name="dropDownListViewStyle">@style/MyApp.MyPopupMenuListView</item>
        <item name="actionOverflowButtonStyle">@style/MyApp.MyOverflowButton</item>

        <item name="actionBarDivider">@null</item>
        <!-- OverFlow Menu Text Color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- ActionBar styles for Text Style, Background-->
    <style name="MyApp.MyActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/Cyan_500</item>
        <item name="titleTextStyle">@style/MyApp.MyTitleTextStyle</item>
    </style>

    <style name="MyApp.MyTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Overflow Button in ActionBar -->
    <style name="MyApp.MyOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_drawer</item>
    </style>

    <!-- Background color for Action Bar overflow menu -->
    <style name="MyApp.MyPopupMenuListView" parent="Widget.AppCompat.Light.ListView.DropDown">
        <!--<item name="android:divider">@android:color/white</item>-->
        <!--<item name="android:dividerHeight">1dp</item>-->
        <item name="android:background">@color/Cyan_500</item>
    </style>


    <style name="Text_SingleLine_BlackColor" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:paddingLeft">3dp</item>
    </style>


</resources>
